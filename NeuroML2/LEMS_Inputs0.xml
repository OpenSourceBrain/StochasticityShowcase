<Lems>


    <!-- Specify which component to run -->
    <Target component="sim1"/>

    <!-- Include core NeuroML2 ComponentType definitions -->
    <Include file="Cells.xml"/>
    <Include file="Networks.xml"/>
    <Include file="Inputs.xml"/>
    <Include file="PyNN.xml"/>
    <Include file="Simulation.xml"/>


    <izhikevich2007Cell id="RS" v0 = "-60mV" C="100 pF" k = "0.7 nS_per_mV"
                    vr = "-60 mV" vt = "-40 mV" vpeak = "35 mV" 
                    a = "0.03 per_ms" b = "-2 nS" c = "-50 mV" d = "100 pA"/>

    <expTwoSynapse id="syn1" gbase="1nS" erev="20mV" tauRise="0.1ms" tauDecay="1ms"/>

    <spikeGenerator id="spikeGenRegular" period="20 ms"/>

    <spikeGeneratorRandom id="spikeGenRandom" minISI="0.09 ms"
                          maxISI="0.11 ms"/>

    <spikeGeneratorPoisson id="spikeGenPoisson" averageRate="40000 Hz"/>
    
    <spikeGeneratorRefPoisson id="spikeGenRefPoisson" averageRate="50 Hz" minimumISI="10 ms"/>
    
    <SpikeSourcePoisson id="spikeSourcePoisson1" start="100ms" duration="200ms" rate="100Hz"/>
    
    <poissonFiringSynapse id="poissonFiringSyn" averageRate="50 Hz" synapse="syn1" spikeTarget="./syn1"/>
    
    <transientPoissonFiringSynapse id="transPoissonFiringSyn" delay="0ms" duration="50s" averageRate="50 Hz" synapse="syn1" spikeTarget="./syn1"/>


    <network id="net1">
        <population id="izhPop" component="RS" size="7"/>

        <population id="spikeGenPoissonPop" component="spikeGenPoisson" size="1"/>
        <population id="spikeGenRandomPop" component="spikeGenRandom" size="1"/>
        <population id="spikeSourcePoissonPop" component="spikeSourcePoisson1" size="1"/>
        
        <synapticConnection from="spikeGenPoissonPop[0]" to="izhPop[2]" synapse="syn1" destination="synapses"/>
        <synapticConnection from="spikeGenRandomPop[0]" to="izhPop[1]" synapse="syn1" destination="synapses"/>
        <synapticConnection from="spikeSourcePoissonPop[0]" to="izhPop[3]" synapse="syn1" destination="synapses"/>
        
        <explicitInput target="izhPop[4]" input="poissonFiringSyn" destination="synapses"/>
        <explicitInput target="izhPop[5]" input="transPoissonFiringSyn" destination="synapses"/>
        
    </network>

    <!-- End of NeuroML2 content -->
        

    <Simulation id="sim1" length="400ms" step="0.01ms" target="net1" seed="123456711"> <!-- Note seed: ensures same random numbers used every run -->

    
        <Display id="d40" title="Ex16: Izhikevich cell, spiking inputs, time since spikes" timeScale="1ms" xmin="-1" xmax="11" ymin="-5" ymax="45">
 
            <Line id ="t since" quantity="spikeGenPoissonPop[0]/tsince" scale="1ms"  color="#3f0009" timeScale="1ms"/>
            <Line id ="t next i" quantity="spikeGenPoissonPop[0]/tnextIdeal" scale="1ms"  color="#ffaa09" timeScale="1ms"/>
            <Line id ="t next u" quantity="spikeGenPoissonPop[0]/tnextUsed" scale="1ms"  color="#ffaaaa" timeScale="1ms"/>
            <Line id ="isi" quantity="spikeGenPoissonPop[0]/isi" scale="1ms"  color="#3f0aaa" timeScale="1ms"/>
            <Line id ="Random spike gen t since" quantity="spikeGenRandomPop[0]/tsince" scale="1ms"  color="#3ff9999" timeScale="1ms"/>
            
        </Display>
        
        <Display id="d41" title="Ex pynn" timeScale="1ms" xmin="-20" xmax="420" ymin="-5" ymax="45">
 
            <Line id ="PyNN spike gen t since" quantity="spikeSourcePoissonPop[0]/tsince" scale="1ms"  color="#aa0009" timeScale="1ms"/>
            <Line id ="PyNN t next i" quantity="spikeSourcePoissonPop[0]/tnextIdeal" scale="1ms"  color="#ffaa09" timeScale="1ms"/>
            <Line id ="PyNN t next u" quantity="spikeSourcePoissonPop[0]/tnextUsed" scale="1ms"  color="#ffaaaa" timeScale="1ms"/>
            <Line id ="PyNN isi" quantity="spikeSourcePoissonPop[0]/isi" scale="1ms"  color="#ffaaaa" timeScale="1ms"/>
        </Display>
    
        <Display id="d4" title="Ex16: Izhikevich cell, spiking inputs" timeScale="1ms" xmin="-20" xmax="420" ymin="-61" ymax="-56">
 
    
            
            <Line id="poisson firing syn" quantity="izhPop[3]/v" scale="1mV" color="#ff6ccc" timeScale="1ms"/>
            
        </Display>
    
    
        <OutputFile id="of0" fileName="inputs.dat">
            <OutputColumn id="v0" quantity="izhPop[0]/v" />
            <OutputColumn id="v1" quantity="izhPop[1]/v" />
            <OutputColumn id="v2" quantity="izhPop[2]/v" />
            <OutputColumn id="v3" quantity="izhPop[3]/v" />
            <OutputColumn id="v4" quantity="izhPop[4]/v" />
            <OutputColumn id="v5" quantity="izhPop[5]/v" />
            <OutputColumn id="v6" quantity="izhPop[6]/v" />
        </OutputFile>
    
   
        <EventOutputFile id="spikes2" fileName="poisson.spikes" format="ID_TIME">
            <EventSelection id="0" select="spikeGenPoissonPop[0]" eventPort="spike"/>
        </EventOutputFile>
        
        <EventOutputFile id="spikes1" fileName="randomF.spikes" format="ID_TIME">
            <EventSelection id="0" select="spikeGenRandomPop[0]" eventPort="spike"/>
        </EventOutputFile>
        
        <EventOutputFile id="spikes4" fileName="pois.syn.spikes" format="ID_TIME">
            <EventSelection id="0" select="izhPop[4]/poissonFiringSyn" eventPort="spike"/>
        </EventOutputFile>
        
        <EventOutputFile id="spikes5" fileName="trans.pois.syn.spikes" format="ID_TIME">
            <EventSelection id="0" select="izhPop[5]/transPoissonFiringSyn" eventPort="spike"/>
        </EventOutputFile>

    </Simulation>

</Lems>
